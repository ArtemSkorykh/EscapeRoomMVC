@model IEnumerable<EscapeRoomMVC.Models.EscapeRoom>

@{
    ViewData["Title"] = "Управление квест-комнатами";
}

<h2>@ViewData["Title"]</h2>

<a href="@Url.Action("Create")" class="btn btn-primary">Добавить новую квест-комнату</a>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)

        {
            <tr>
                <td>@room.Name</td>
                <td>@room.Description</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = room.Id })" class="btn btn-warning">Редактировать</a>
                    <a href="@Url.Action("Delete", new { id = room.Id })" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>