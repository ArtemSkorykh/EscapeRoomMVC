@model EscapeRoomMVC.Models.EscapeRoom

@{
    ViewData["Title"] = "Удалить квест-комнату";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>Вы уверены, что хотите удалить квест-комнату "@Model.Name"?</h3>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Удалить</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>